@{
    ViewData["Title"] = "User Profile";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .profile-container {
            margin-top: 50px;
            padding: 20px;
        }

        .profile-img {
            width: 250px;
            height: 250px;
            border-radius: 50%;
            margin: 0 auto;
            display: block;
            object-fit: cover;
        }

    </style>
</head>
<body>

    <div class="container">
        <h1 class="text-center mt-5">User Profile</h1>
        <div class="row">
            <div class="col">
                <div class="text-center mb-4">
                    <img src="https://images.pexels.com/photos/220429/pexels-photo-220429.jpeg?cs=srgb&dl=pexels-pixabay-220429.jpg&fm=jpg" alt="Profile Picture" class="profile-img">
                </div>
                <div class="text-center">
                    <button class="btn btn-primary rounded">Edit</button>
                </div>
            </div>
            <div class="col-md-8">
                <div class="profile-container">
                    <div class="profile-info">
                        <p><span class="fw-bold">Name:</span> John Doe</p>
                        <p><span class="fw-bold">Email:</span> johndoe@example.com</p>
                        <p><span class="fw-bold">Location:</span> New York, USA</p>
                        <p><span class="fw-bold">Age:</span> 30</p>
                        <p><span class="fw-bold">Interests:</span> Web Development, Photography, Travel</p>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-3">
                            <div class="container rounded p-3 text-center" style="border: 1px solid grey;">
                                <p class="fw-bold">Blog Count</p>
                                <p>100</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="container rounded p-3 text-center" style="border: 1px solid grey;">
                                <p class="fw-bold">Upvote</p>
                                <p>100</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="container rounded p-3 text-center" style="border: 1px solid grey;">
                                <p class="fw-bold">Downvote</p>
                                <p>100</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
